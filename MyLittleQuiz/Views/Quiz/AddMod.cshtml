<form asp-action="AddPool">
	<div class="form-group">
		<label asp-for="Name" ></label>
		<select asp-for="Name">
			@foreach (var mod in Model.Users)
			{
				<option>@mod.Login</option>
			}
		</select>
		<span asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<input asp-route-id=@Model.QuizId type="submit" value="Add New Pool"></input>
	</div>
</form>